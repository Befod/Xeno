    "version": "21.7.0",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_21.7.0_portable.zip",
            "hash": "67964257a7516b5fe6bb42e0d0add8854f517e915af716833629edc02a7c4390"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_21.7.0_portable.zip",
            "hash": "f657d628000efccbce40a38e1b9caef9deebefaeffe61211ff4aec11ae2a9215"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
