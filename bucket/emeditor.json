{
    "homepage": "https://www.emeditor.com/",
    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "21.7.1",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_21.7.1_portable.zip",
            "hash": "ef7fa7f74d907cb39c855f43b914f8af534a802901acfc9804b2b5526bb2dafa"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_21.7.1_portable.zip",
            "hash": "be444c7f163b9b1edfb29e44f379bb31acebfbdfc1d6ef246390873d90d2fdf5"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
