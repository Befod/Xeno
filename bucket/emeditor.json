    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "21.9.1",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_21.9.1_portable.zip",
            "hash": "f37896d1ae92ef93791069de257e1588691c26c4ddb1d7ed6e9c9f3862e1183c"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_21.9.1_portable.zip",
            "hash": "ab8a6b7627fad6abc305a89ba0f3421d8245c45932394fdf0c2f5e7007b081d5"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
