{
    "homepage": "https://www.emeditor.com/",
    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "22.0.0",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_22.0.0_portable.zip",
            "hash": "4f39170cdd7cbcc2d94dbb07bcc54d2970a65481582a4f7c133ecd4fadd06e73"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_22.0.0_portable.zip",
            "hash": "dfed721144dfc9554f6f2073098cc33d7c8fdab5a0abc1563bcc81745b842372"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
