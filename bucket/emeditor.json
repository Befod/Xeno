{
    "homepage": "https://www.emeditor.com/",
    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "21.1.4",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_21.1.4_portable.zip",
            "hash": "25570b1e716601b93b693646ff638d6e97a87b2e95fe0ff415f9e53f3a79a74c"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_21.1.4_portable.zip",
            "hash": "360304d970ce29de5ca0ff39a1159c52180aa6a70004ff7476a0ff2f08eb9f6d"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
