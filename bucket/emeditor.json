{
    "homepage": "https://www.emeditor.com/",
    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "22.0.1",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_22.0.1_portable.zip",
            "hash": "0f8f7a83c239d9f7addb790df25bdec481095e0f1a876a60c78281e1815a6b56"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_22.0.1_portable.zip",
            "hash": "c28c04ae6a025e4ed0c0ed4b555322e4d7edb5ec75a3995c4bc63c96689c77bf"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
