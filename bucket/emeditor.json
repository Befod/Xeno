{
    "homepage": "https://www.emeditor.com/",
    "description": "A fast, lightweight, yet extensible, easy-to-use text editor for Windows.",
    "version": "19.0.0",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_19.0.0_portable.zip",
            "hash": "76d52bfa3d810222917547ea8d3179747cc19ec5782a2b461705fd54c1881eed"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_19.0.0_portable.zip",
            "hash": "861137174e050ff6c55b34364e30e4f1d5013f179dd1bc8c7ef6f22029a7fe6c"
        }
    },
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "AppData",
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini",
        "eeUseIni.ini"
    ],
    "pre_install": [
        "function CreateFile ($name) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$persist_dir\" -Name $name -ItemType \"file\"",
        "    }",
        "}",
        "'eeCommon.ini', 'eeConfig.ini', 'eeLM.ini','eePlugins.ini' | % {CreateFile $_}"
    ],
    "checkver": {
        "url": "https://www.emeditor.com/download/",
        "regex": "Download latest version: v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
